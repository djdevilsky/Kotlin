<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relative"
    android:background="#2B3033"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:background="#2B3033"
        android:paddingLeft="20dp"
        android:textColor="#9DA2A6"
        android:paddingTop="15dp"
        android:text="RAD"
        android:textSize="17dp"
        android:fontFamily="@font/codepro"/>

    <TextView
        android:id="@+id/calcScreen"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_below="@+id/textView"
        android:fontFamily="@font/codepro"
        android:paddingRight="15dp"
        android:paddingTop="25dp"
        android:text=""
        android:textAlignment="textEnd"
        android:textColor="#FFF"
        android:textSize="50dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_below="@+id/calcScreen"
        android:text=""
        android:textSize="50dp"
        android:textAlignment="textEnd"
        android:textColor="#FFF"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/textView3"
        android:weightSum="4">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="5">

            <Button
                android:id="@+id/num7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="7"
                android:background="#202125"
                android:textSize="30sp"
                android:textColor="#FFF"
                android:layout_weight="1"
                android:fontFamily="@font/codepro"/>

            <Button
                android:id="@+id/num8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="8"
                android:background="#202125"
                android:textSize="30sp"
                android:textColor="#FFF"
                android:layout_weight="1"
                android:fontFamily="@font/codepro"/>
            <Button
                android:id="@+id/num9"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="9"
                android:background="#202125"
                android:textSize="30sp"
                android:textColor="#FFF"
                android:layout_weight="1"
                android:fontFamily="@font/codepro"/>

            <Button
                android:id="@+id/del"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#202125"
                android:text="DEL"
                android:textColor="#87b8f2"
                android:textSize="24sp"
                android:layout_marginLeft="2dp"
                android:fontFamily="@font/codepro"/>
            <Button
                android:id="@+id/clear"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="C"
                android:background="#202125"
                android:textSize="24sp"
                android:textColor="#87b8f2"
                android:layout_weight="1"
                android:fontFamily="@font/codepro"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="5">

            <Button
                android:id="@+id/num4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="4"
                android:background="#202125"
                android:textSize="30sp"
                android:textColor="#FFF"
                android:layout_weight="1"
                android:fontFamily="@font/codepro"/>

            <Button
                android:id="@+id/num5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="5"
                android:background="#202125"
                android:textSize="30sp"
                android:textColor="#FFF"
                android:layout_weight="1"
                android:fontFamily="@font/codepro"/>

            <Button
                android:id="@+id/num6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="6"
                android:textColor="#FFF"
                android:background="#202125"
                android:textSize="30sp"
                android:layout_weight="1"
                android:fontFamily="@font/codepro"/>

            <Button
                android:id="@+id/div"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="÷"
                android:layout_marginLeft="2dp"
                android:background="#202125"
                android:textSize="24sp"
                android:textColor="#87b8f2"
                android:layout_weight="1"
                android:fontFamily="@font/codepro"/>

            <Button
                android:id="@+id/square"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="x²"
                android:background="#202125"
                android:textSize="24sp"
                android:textColor="#87b8f2"
                android:layout_weight="1"
                android:fontFamily="@font/codepro"/>
        </TableRow>



        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="5">

            <Button
                android:id="@+id/num1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="1"
                android:background="#202125"
                android:textSize="30sp"
                android:textColor="#FFF"
                android:layout_weight="1"
                android:fontFamily="@font/codepro"/>

            <Button
                android:id="@+id/num2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="2"
                android:background="#202125"
                android:textSize="30sp"
                android:textColor="#FFF"
                android:layout_weight="1"
                android:fontFamily="@font/codepro"/>

            <Button
                android:id="@+id/num3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="3"
                android:background="#202125"
                android:textSize="30sp"
                android:textColor="#FFF"
                android:layout_weight="1"
                android:fontFamily="@font/codepro"/>

            <Button
                android:id="@+id/mult"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="×"
                android:layout_marginLeft="2dp"
                android:background="#202125"
                android:textSize="24sp"
                android:textColor="#87b8f2"
                android:layout_weight="1"
                android:fontFamily="@font/codepro"/>

            <Button
                android:id="@+id/subs"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="-"
                android:background="#202125"
                android:textSize="24sp"
                android:textColor="#87b8f2"
                android:layout_weight="1"
                android:fontFamily="@font/codepro"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="5">

            <Button
                android:id="@+id/num0"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="0"
                android:background="#202125"
                android:textSize="30sp"
                android:textColor="#FFF"
                android:layout_weight="1"
                android:fontFamily="@font/codepro"/>

            <Button
                android:id="@+id/dot"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=","
                android:background="#202125"
                android:textSize="30sp"
                android:textColor="#FFF"
                android:layout_weight="1"
                android:fontFamily="@font/codepro"/>

            <Button
                android:id="@+id/equal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="="
                android:background="#202125"
                android:textSize="30sp"
                android:textColor="#FFF"
                android:layout_weight="1"
                android:fontFamily="@font/codepro"/>

            <Button
                android:id="@+id/plus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="+"
                android:layout_marginLeft="2dp"
                android:background="#202125"
                android:textSize="24sp"
                android:textColor="#87b8f2"
                android:layout_weight="1"
                android:fontFamily="@font/codepro"/>

            <Button
                android:id="@+id/sqrt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="√"
                android:background="#202125"
                android:textSize="24sp"
                android:textColor="#87b8f2"
                android:layout_weight="1"
                android:fontFamily="@font/codepro"/>
        </TableRow>

    </TableLayout>

</RelativeLayout>
